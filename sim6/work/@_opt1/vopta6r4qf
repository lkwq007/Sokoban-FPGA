library verilog;
use verilog.vl_types.all;
entity ps2_mouse_bit_counter is
    port(
        clk             : in     vl_logic;
        reset           : in     vl_logic;
        bit_reset       : in     vl_logic;
        bit_counter     : out    vl_logic_vector(6 downto 0);
        falling_edge    : in     vl_logic
    );
end ps2_mouse_bit_counter;
